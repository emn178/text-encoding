  "version": "0.7.1",
  "description": "Polyfill for the Encoding Living Standard's API.",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/encoding.js",
    "lib/encoding-indexes.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inexorabletash/text-encoding.git"
  },
  "keywords": [
    "encoding",
    "decoding",
    "living standard"
  ],
  "bugs": {
    "url": "https://github.com/inexorabletash/text-encoding/issues"
  },
  "homepage": "https://github.com/inexorabletash/text-encoding",
  "license": "(Unlicense OR Apache-2.0)",
  "devDependencies": {
    "http-server": "^0.12.3",
    "jest": "^26.0.1",
    "puppeteer": "^3.0.4",
    "rollup": "^2.8.2",
    "uglifyjs": "^2.4.11"
  },
  "scripts": {
    "build": "yarn build:es2015 && yarn build:esm && yarn build:cjs && yarn build:umd && yarn build:umd:min",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir dist/es2015",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "build:umd": "rollup ./dist/esm/encoding.js",
    "build:umd:min": "cd dist/umd && uglifyjs --compress --mangle --source-map --screw-ie8 --comments --o text-encoding.min.js -- text-encoding.js && gzip text-encoding.min.js -c > text-encoding.min.js.gz",
    "test:serve": "cd ./test && git submodule init && git submodule update --checkout && ../test-server.sh",
    "test:integration": "yarn jest __tests__",
    "test": "yarn test:serve && jest"
  }
}
